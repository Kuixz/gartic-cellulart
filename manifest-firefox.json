{
    "manifest_version": 3,
    "name": "Gartic Cellulart for Gartic Phone",
    "version": "1.3.2",
    "description": "Level up your Gart.",
    "icons":{
        "48": "ico48.png",
        "128": "ico128.png"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["https://garticphone.com/*"],
            "css": ["content.css"],
            "js": ["content.js"]
        },
        {
            "matches": ["https://garticphone.com/*"],
            "js": ["injector.js"],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "host_permissions": [
        "https://garticphone.com/*"
    ],
    "permissions": [
        "storage"
    ],
    "web_accessible_resources": [
        {
            "matches": [ "https://garticphone.com/*" ],
            "resources": [ "*.png", "injected.js" ]
        }
    ],
    "browser_specific_settings" : {
        "gecko": {
            "id": "{9c773d26-5b2c-4c3e-ad36-a5a98e2d1d0f}"
        }
    }
}
